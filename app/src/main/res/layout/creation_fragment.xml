<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/buttons_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/album_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/album_ref_icon"
            android:scaleType="fitCenter"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/photograph_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/photograph_ref_icon"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/no_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/no_ref_icon"
            android:background="@null"
            />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>