<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/name_collect_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/title" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_horizontal|bottom" >

                <ImageButton
                    android:id="@+id/collect_ibtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:scaleType="center"
                    android:src="@drawable/un_collect_icon" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/show_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >
                        
                        <RelativeLayout 
                            android:id="@+id/video_rl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                            android:id="@+id/video_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/introduction" />
                            <ImageView
                            android:id="@+id/video_play_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:scaleType="center"
                            android:src="@drawable/play_icon" />
                        </RelativeLayout>

                        

                        <ImageView
                            android:id="@+id/img_iv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/introduction" />
                    </LinearLayout>

                    <RelativeLayout
                        android:background="@drawable/text_bg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                        
                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_below="@+id/content_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20161122"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/content" />

                        <TextView
                            android:id="@+id/content_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="content"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/content" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout                     
                    android:id="@+id/edit_rl"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/delete_video_ibtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:scaleType="center"
                            android:src="@drawable/delete_icon" />

                        <ImageButton
                            android:id="@+id/change_img_ibtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:scaleType="center"
                            android:src="@drawable/change_pic_icon" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageButton
                            android:id="@+id/change_content_ibtn"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@null"
                            android:scaleType="center" />
                    </RelativeLayout>
                </RelativeLayout>
                
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageButton
                    android:id="@+id/share_ibtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="center"
                    android:layout_margin="5dp"
                    android:src="@drawable/share_icon" />
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="10dp">
            
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>