<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/video_ref_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:id="@+id/video_ref_iv"
            android:src="@drawable/video_ref_img"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/buttons_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/video_ref_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageButton 
            android:id="@+id/album_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/album_ref_icon"
            android:background="@null"
            android:layout_weight="1"/>
        
        <ImageButton 
            android:id="@+id/photograph_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/photograph_ref_icon"
            android:background="@null"
            android:layout_weight="1"/>
        
        <ImageButton 
            android:id="@+id/no_ref_ibtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/no_ref_icon"
            android:background="@null"
            android:layout_weight="1"/>
    </LinearLayout>

    <GridView
        android:id="@+id/gview"
        android:layout_below="@+id/buttons_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:horizontalSpacing="5px"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:verticalSpacing="10px" >
    </GridView>

    

</RelativeLayout>